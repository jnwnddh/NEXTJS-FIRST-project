{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/commons/layout/navCard/banner.product.jsx",
    "src/commons/layout/navCard/banner.container.jsx",
    "src/commons/layout/header/LayoutHeader.presenter.tsx",
    "src/commons/layout/header/LayoutHeader.style.ts",
    "src/commons/layout/Banner/LayoutBanner.container.tsx"
  ],
  "exclude": ["node_modules"]
}
